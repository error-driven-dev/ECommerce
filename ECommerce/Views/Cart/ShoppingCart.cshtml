@model Cart

<h3>Your Shopping Cart</h3>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Price</th>
    </tr>
    </thead>
    @if(Model.LineItems.Count == 0) { <td colspan="3">Your Shopping Cart is Empty!</td>}
        @foreach (var p in Model.LineItems)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Description</td>
            <td>@p.Price.ToString("C") <a class="btn" asp-action="RemoveItem" asp-route-prodid="@p.ProductId" asp-controller="Cart">Remove Item</a></td>

        </tr>
}
        
    
</table> 
<h3>Total: @Model.LineItems.Sum(p => p.Price).ToString("C") </h3>

<a asp-action="NewAddress" asp-controller="Checkout" class="btn">Checkout</a>
<a asp-action="ProductDirectory" asp-controller="product">Continue Shopping</a>
