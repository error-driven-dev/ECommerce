<div class="container">
    <div class="card-deck">
        @foreach (var p in Model.Products)
        {
            <div class="card col-4">
                <img class="card-img-top" src="#" alt="Alternate Text" />
                <div class="card-body">
                    <div class="mid">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">@p.Description</p>
                    </div>
                    <div class="">
                        <h6 class="text-danger bd">@p.Price.ToString("C")</h6>
                        <p><a class="btn btn-primary btn-sm" asp-action="AddToCart" asp-route-ProdID="@p.ProductId" asp-controller="Cart">Add to Cart</a></p>
                    </div>                </div>
            </div>
        }
    </div>
</div>

<div class="pages text-center m-2">
    @for(int i = 1; i< @Model.NumPages+1; i++){
    <a asp-action="ProductDirectory" asp-route-pagenum="@i">Page @i</a>}

</div>
@if (ViewContext.HttpContext.Session.Keys.Contains("Cart"))
{
    <a asp-action="ViewCart" asp-controller="cart">View Shopping Cart</a>
}