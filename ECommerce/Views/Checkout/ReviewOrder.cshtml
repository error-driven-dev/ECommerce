@using System.Collections
@model ReviewOrderViewModel
    
<h3>Cart Contents:</h3>
<table class="table table-sm">
    @foreach (var p in Model.Cart.LineItems)
    {
        <tr>
        <td>@p.Name</td>
        <td>@p.Price.ToString("C")</td>
</tr>
    }
    <tr class="font-weight-bold"><td>Subtotal</td><td>@Model.Cart.LineItems.Sum(a=>a.Price)</td></tr>
</table>


<h3>Ship To:</h3>
<h6>@Model.ShipInfo.FirstName @Model.ShipInfo.LastName</h6> <a asp-action="EditShipInfo" type="button" class="btn btn-sm">Edit Shipping Info</a>
<p>@Model.ShipInfo.AddressLine1</p>
<p>@Model.ShipInfo.AddressLine2</p>
<p>@Model.ShipInfo.City, @Model.ShipInfo.State @Model.ShipInfo.Zipcode</p>

<p>@Model.ShipInfo.Phone.ToString("###-###-####")</p>
<a asp-action="SubmitOrder" type="button" class="btn btn-default">Complete Order</a>

