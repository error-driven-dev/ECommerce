@model PaymentInfoViewModel

<h6>Enter your payment information.</h6>
<div class="row">
    <div class="col-md-4">
        <form asp-action="PaymentInfo" asp-controller="Checkout">
            <div asp-validation-summary="ModelOnly" class="text-danger">First Name:</div>
            
            <div>
                <label asp-for="PaymentMethod"></label>
                <select asp-for="PaymentMethod" >
                    <option ></option>
                </select>
                <label asp-for="CardNumber"></label>
                <input asp-for="CardNumber"/>
                <label asp-for="ExpireDate"></label>
                <input asp-for="ExpireDate"/>



            </div>
            <div class="form-group">
                <label asp-for="BillingAddress.FirstName" class="control-label"></label>
                <input asp-for="BillingAddress.FirstName" class="form-control" />
                <span asp-validation-for="BillingAddress.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingAddress.LastName" class="control-label">Last Name:</label>
                <input asp-for="BillingAddress.LastName" class="form-control" />
                <span asp-validation-for="BillingAddress.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingAddress.Phone" class="control-label"></label>
                <input asp-for="BillingAddress.Phone" class="form-control" />
                <span asp-validation-for="BillingAddress.Phone" class="text-danger"></span>
            </div>


            <h6>Enter your billing Address.</h6>
            <div class="form-group">
                <label asp-for="BillingAddress.AddressLine1" class="control-label"></label>
                <input asp-for="BillingAddress.AddressLine1" class="form-control" />
                <span asp-validation-for="BillingAddress.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingAddress.AddressLine2" class="control-label"></label>
                <input asp-for="BillingAddress.AddressLine2" class="form-control" />
                <span asp-validation-for="BillingAddress.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingAddress.City" class="control-label"></label>
                <input asp-for="BillingAddress.City" class="form-control" />
                <span asp-validation-for="BillingAddress.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingAddress.City" class="control-label">State:</label>
                <input asp-for="BillingAddress.City" class="form-control" />
                <span asp-validation-for="BillingAddress.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillingAddress.Zipcode" class="control-label">Zipcode:</label>
                <input asp-for="BillingAddress.Zipcode" class="form-control" />
                <span asp-validation-for="BillingAddress.Zipcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Continue Checkout" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>